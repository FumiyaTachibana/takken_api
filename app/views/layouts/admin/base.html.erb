<!DOCTYPE html>
<html>
<head>
  <title>TakkenApi</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= stylesheet_link_tag    'admin', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'admin' %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to Settings.service_name, admin_root_path, class: 'navbar-brand' %>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">

          <% if admin_admin_user_signed_in? %>
            <li><%= link_to '◯✕問題集管理', web_root_path %></li>
            <li><%= link_to '過去問題集管理', web_root_path %></li>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">ドロップダウンチェック <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to '新規作成', web_root_path %></li>
                <li><%= link_to '既存編集', web_root_path %></li>
              </ul>
            </li>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="glyphicon glyphicon-user"></i>
                <span><i class="caret"></i></span>
              </a>
              <ul class="dropdown-menu">
                <li role="presentation"><%#= link_to '設定', edit_admin_user_registration_path %></li>
                <li role="presentation"><%= link_to "ログアウト", destroy_admin_admin_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "ログイン", new_admin_admin_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid">
    <%= flash_messages %>

    <%= yield %>
  </div>

</body>
</html>
